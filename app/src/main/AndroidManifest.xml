<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.nuton.energyestimator" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name="in.nuton.energyestimator.ApplicationGlobals"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="in.nuton.energyestimator.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.nuton.energyestimator.RegisterActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="in.nuton.energyestimator.ReportActivity"
            android:label="Report" >
        </activity>
    </application>


</manifest>
