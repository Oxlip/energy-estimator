<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <!-- android:background="@drawable/list_item_border" -->

    <ImageView
        android:id="@+id/dl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/tv"
        android:focusable="false"/>

    <TextView
        android:id="@+id/dl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dl_image"
        android:layout_toRightOf="@id/dl_image"
        android:text="Home Appliance Name"/>

    <SeekBar
        android:id="@+id/dl_active_hours"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dl_name"
        android:layout_toRightOf="@id/dl_name"/>

</RelativeLayout>